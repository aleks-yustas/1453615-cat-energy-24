<section class="main-footer__item social">
  <h2 class="page__hidden">Подписывайтесь на наши социальные сети</h2>
  <ul class="social__list">
    {% for social in socials %}
      <li class="social__item">
        <a class="social__link social__link--{{ social.id }}" href="{{ social.link }}" rel="noopener nofollow" target="_blank">
          <span class="page__hidden">{{ social.name }}</span>
          <svg class="social__icon" width="22" height="22" aria-hidden="true" focusable="false"></svg>
        </a>
      </li>
    {% endfor %}
  </ul>
</section>
